from src.moonshot_client import ask

def jarvis_brain(user_text):
    messages = [
        {
            "role": "system",
            "content": (
                "Sei Jarvis, un assistente vocale residente sul computer dellutente. "
                "Aiuti lutente mentre lavora, rispondendo in modo chiaro, corretto e utile. "
                "Usa un tono diretto, tecnico quando serve, semplice quando possibile. "
                "Se non sei sicuro di uninformazione, dichiaralo esplicitamente."
            )
        },
        {
            "role": "user",
            "content": user_text
        }
    ]

    return ask(messages)
